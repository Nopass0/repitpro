generator client {
  provider = "prisma-client-js"
}

datasource db {
  //prod
  // provider = "postgresql"
  // url      = env("DATABASE_URL")

  //sqlite3 dev
  provider = "sqlite"
  url      = "file:./db.sqlite"
}


//users and auth tokens
model User {
  id         String   @id @default(cuid())
  name       String   @unique
  password   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


model Token {
  id         String   @id @default(cuid())
  userId     String
  token      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}