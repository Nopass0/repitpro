{
	"name": "repitpro",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"dev:server": "WATCHPACK_POLLING=true vite --host 0.0.0.0 --port 80",
		"build": "bun run lint && vite build",
		"build:ts": "tsc",
		"preview": "vite preview",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
		"lint": "eslint src --ext .js,.jsx,.ts,.tsx || true",
		"lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix || true"
	},
	"dependencies": {
		"@emotion/react": "^11.11.4",
		"@emotion/styled": "^11.11.0",
		"@mui/base": "^5.0.0-beta.37",
		"@mui/icons-material": "^5.15.17",
		"@mui/material": "^5.15.12",
		"@mui/x-date-pickers": "^6.19.7",
		"@vitejs/plugin-react": "^1.1.0",
		"axios": "^1.6.7",
		"chart.js": "^4.4.2",
		"date-fns": "^3.5.0",
		"dayjs": "^1.11.10",
		"eslint": "8",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"lodash": "^4.17.21",
		"moment": "^2.30.1",
		"prettier": "^3.2.5",
		"react": "^18.2.0",
		"react-burger-menu": "^3.0.9",
		"react-chartjs-2": "^5.2.0",
		"react-dom": "^18.2.0",
		"react-input-mask": "^2.0.4",
		"react-multi-date-picker": "^4.4.1",
		"react-redux": "^9.1.0",
		"react-router-dom": "^6.22.1",
		"redux": "^5.0.1",
		"scss": "^0.2.4",
		"socket.io-client": "^4.7.4",
		"vite-tsconfig-paths": "^4.3.2"
	},
	"devDependencies": {
		"@types/node": "^20.12.7",
		"@types/react": "^18.2.56",
		"@types/react-burger-menu": "^2.8.7",
		"@types/react-dom": "^18.2.19",
		"@typescript-eslint/eslint-plugin": "^7.9.0",
		"@typescript-eslint/parser": "^7.9.0",
		"@vitejs/plugin-react": "^4.2.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"eslint-plugin-unused-imports": "^3.2.0",
		"sass": "^1.71.1",
		"typescript": "^5.2.2",
		"vite": "^5.1.4",
		"husky": "^8.0.0"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"unused-imports"
		],
		"rules": {
			"@typescript-eslint/no-unused-vars": "off",
			"unused-imports/no-unused-imports": "error",
			"unused-imports/no-unused-vars": [
				"warn",
				{
					"vars": "all",
					"varsIgnorePattern": "^_",
					"args": "after-used",
					"argsIgnorePattern": "^_"
				}
			]
		}
	}
}
